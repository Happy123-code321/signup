<div class="signup-box">
  <h2>Create Account</h2>
  <form onsubmit="return signUp(event)">
    <input id="newUser" type="text" placeholder="Choose Username" required />
    <input id="newPass" type="password" placeholder="Choose Password" required />
    <button type="submit">Sign Up</button>
  </form>
  <p style="margin-top: 20px;">Already have an account? <a href="login.html">Login</a></p>
</div>

<script>
function signUp(e) {
  e.preventDefault();
  const u = document.getElementById('newUser').value;
  const p = document.getElementById('newPass').value;

  localStorage.setItem('savedUser', u);
  localStorage.setItem('savedPass', p);

  alert("Account created! You can now log in.");
  window.location.href = "login.html";
}
</script>
